:- dynamic(gameState / 1). /* gameState(isGameOn/Off) */
:- dynamic(takeTokemon / 1). /* takeTokemon(isTake) */
:- include('map.pl').

gameState(0).
takeTokemon(0).
turnOnGame :-
    retract(gameState(_)),
    asserta(gameState(1)).

start :-
    gameState(X),
    X == 1,
    write('Kamu sudah memulai game!'), nl, !.
